{
  "compilerOptions": {
    "target": "es5",
    "lib": [ "esnext", "dom" ],
    "outDir": "./dist/",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react",
  },
  "include": ["./src/**/*"]
}
